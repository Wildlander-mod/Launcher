{
  "extends": "@tsconfig/node16-strictest/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2021",
    "module": "CommonJS",
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "references": [
    {
      "path": "./src/renderer"
    },
    {
      "path": "./src/main"
    },
    {
      "path": "./src/shared"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
