{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "../../dist/main",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*",
        "./src/types/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.json",
    "../types/*.ts"
  ],
  "exclude": [
    "../../node_modules"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
